{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "product-owner",
  "plugin": [
    "opencode-gemini-auth@latest",
    // "@tarquinen/opencode-dcp@latest",
    // "@ramtinj95/opencode-tokenscope",
    // "opencode-helicone-session",
    "@zenobius/opencode-skillful",
    // "opencode-wakatime",
    "opencode-sessions",
    "@mailshieldai/opencode-canvas",
    "opencode-agent-memory"
  ],
  "lsp": {},
  "model": "kimi-for-coding/k2p5",
  "small_model": "google/gemini-3-flash-preview",
  "agent": {
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
    "general": {
      "disable": true
    },
    "explore": {
      "disable": true
    }
  },
  "permission": {
    "bash": "allow",     // Safety: Ask user before running shell commands by default
    "edit": "allow",     // Safety: Ask before writing files
    "webfetch": "allow",
    "task": "deny",   // Logic: Agents calling agents is generally safe
    "question": "allow",
    "mcp": "allow",
    "memory_append": "allow",  // Agents can autonomously add memories
    "memory_replace": "ask",   // Safety: Ask before REWRITING memory
    "memory_read": "allow"
  },
  "mcp": {
    "go-design-patterns": {
      "type": "remote",
      "url": "https://gitmcp.io/RefactoringGuru/design-patterns-go",
      "enabled": true
    },
    "ts-design-patterns": {
      "type": "remote",
      "url": "https://gitmcp.io/RefactoringGuru/design-patterns-typescript",
      "enabled": true
    },
    "php-design-patterns": {
      "type": "remote",
      "url": "https://gitmcp.io/RefactoringGuru/design-patterns-php",
      "enabled": true
    },
    "filesystem": {
      "type": "local",
      "command": ["npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/jr/Code"
      ]
    },
     "fetch": {
      "type": "local",
      "command": ["uvx", "mcp-server-fetch"]
    },
    "json": {
      "type": "local",
      "command": ["npx", "-y",
        "@gongrzhe/server-json-mcp@1.0.3"],
    },
     "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "enabled": true
    },
    "grep.app": {
      "type": "local",
      "command": [
        "uvx",
        "grep-mcp"
      ]
    },
    "github": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_TOKEN}"
      }
    },
    "Context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}"
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "web-search": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@brave/brave-search-mcp-server",
        "--transport",
        "stdio"
      ],
      "environment": {
        "BRAVE_API_KEY": "{env:BRAVE_API_KEY}"
      }
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ]
    },
    "codegraphcontext": {
      "type": "local",
      "command": [
        "cgc",
        "start"
      ],
      "environment": {
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USERNAME": "{env:NEO4J_USERNAME}",
        "NEO4J_PASSWORD": "{env:NEO4J_PASSWORD}"
      }
    }
  },
  "provider": {
  }
}
